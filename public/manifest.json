{
  "manifest_version": 3,
  "name": "Markdown Editor",
  "description": "本地 Markdown 编辑器 - 在浏览器中查看和编辑 Markdown 文件",
  "version": "1.2.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Markdown Editor"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["file:///*"],
      "include_globs": [
        "*.md",
        "*.markdown",
        "*.mdown",
        "*.mkd",
        "*.mkdn"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/editor.html"],
      "matches": ["file:///*"]
    }
  ]
}
